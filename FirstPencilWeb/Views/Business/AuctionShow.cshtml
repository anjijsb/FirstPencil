@{
    ViewBag.Title = "拍卖展示";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    body {
        text-align: center;
    }

    h1 {
        font-family: "微软雅黑";
        font-size: 40px;
        margin: 20px 0;
        border-bottom: solid 1px #ccc;
        padding-bottom: 20px;
        letter-spacing: 2px;
    }

    #titleshouw {
        margin-top: 10%;
    }

    .time-item {
        margin: 20% auto;
    }

        .time-item strong, #titleshouw > strong {
            background: #C71C60;
            color: #fff;
            line-height: 56px;
            height: 56px;
            font-size: 150px;
            font-family: Arial;
            padding: 0 10px;
            margin-right: 10px;
            border-radius: 5px;
            box-shadow: 1px 1px 3px rgba(0,0,0,0.2);
        }

    /*#day_show {
        float: left;
