    })
    var topn = 0;
    $(".divimg").click(function () {

    })
    $("#xx").click(function () {
        $("#num").hide();
    })
    $("#btn").click(function () {
        $(this).hide();
        $("#btn1").show();
        $("html,body").animate({ scrollTop: $("#centent").offset().top }, 500);
    })
    $("#btn1").click(function () {
        $(this).hide();
        $("#btn").show();
        $("html,body").animate({ scrollTop: 0 }, 500);
        topn = 2;
    })
    $(document).scroll(function () {
        var top = $(document).scrollTop();
        if (top == 0) {
            $("#btn").show();
            $("#btn1").hide();
            topn = 1;
        } else if (top >= 300 && topn == 1) {
            topn = 2;
            $("#btn").hide();
            $("#btn1").show();
            $("html,body").animate({ scrollTop: $("#centent").offset().top }, 500);
        } else if (top < 300 && topn == 2) {
            topn = 0;
            $("#btn").show();
            $("#btn1").hide();
            $("html,body").animate({ scrollTop: 0 }, 500);
        }
