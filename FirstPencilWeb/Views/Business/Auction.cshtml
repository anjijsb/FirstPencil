@{
    ViewBag.Title = "拍卖详情";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .bj {
        width: 100%;
        height: 100%;
        z-index: -100;
        position: fixed;
        left: 0;
        top: 0;
    }


    span {
        color: #725334;
        font-size: 0.5em;
        font-weight: 900;
    }

    #msq {
        width: 100%;
        height: 2.2em;
        border: 1px solid #725334;
        text-align: center;
        line-height: 2.2em;
        color: #725334;
        font-size: 1.2em;
        padding: 0px;
        margin-top: 3em;
        margin-bottom: 1em;
    }

        #msq > img {
            height: 100%;
        }


    .progress {
        width: 100%;
        height: 0.3em;
        line-height: 0.3em;
        margin-bottom: 0%;
    }

        .progress > .bar1 {
            width: 50%;
        }

    .text-right {
        padding: 0px;
        margin: 0px;
        height: 1em;
        line-height: 1em;
    }

    .imgleft {
        margin-left: -25%;
    }

    .imgright {
        margin-right: -25%;
    }

    .carousel-control {
        margin-top: 5%;
    }
    .divimg {
        width: 100%;
        position: fixed;
        bottom: 0.8em;
    }
    #myCarousel{
        margin:0;
        padding:0;
    }
    .divimg1 {
        width: 100%;
        position: fixed;
        bottom: 2em;
        right: 0.5em;
        display: none;
    }

        .divimg img, .divimg1 img {
            height: 2.5em;
        }

    #centent {
        position: absolute;
        width: 100%;
        background-color:white;
    }
    #centent table{
        border-bottom:1px solid #ccc;
    }
    #centent img{
        width:100%;
    }

    #num {
        text-align: center;
        margin: 0px;
        padding: 0px;
        position: fixed;
        width: 85%;
        height: 7.5em;
        top: 30%;
        left: 10%;
    }

        #num > .close {
            margin-right: 0.5em;
        }

    .item img {
        height: 12em;
    }
</style>
<img src="~/Images/bj/pmbj.png" class="bj" />
<div class="hero-unit1">
    <div id="myCarousel" class="carousel slide">
        <div class="carousel-inner">
            <div class="active item"><img src="~/Images/sp/sp01/1.jpg" /></div>
            <div class="item"><img src="~/Images/sp/sp01/2.jpg" /></div>
            <div class="item"><img src="~/Images/sp/sp01/3.jpg" /></div>
        </div>
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <a class="carousel-control left imgleft" href="#myCarousel" data-slide="prev">&lsaquo;</a>
        <a class="carousel-control right imgright" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div>
    @*马上抢*@
    <div id="msq" class="img-circle"><img src="~/Images/bj/msq.png" /></div>
    <div>
        <div class="progress">
            <div class="bar1"></div>
        </div>
        <div class="text-right">
            <span>剩10件</span>
        </div>
    </div>
    <div class="hero-unit" id="num">
        <button type="button" class="close" id="xx">&times;</button>
        <h3>请输入数量:</h3>
        <form class="form-search">
            <div class="input-append">
                <input type="number" class="span2 search-query">
                <button type="submit" class="btn">提交</button>
            </div>
        </form>
    </div>
</div>
<div id="centent">
