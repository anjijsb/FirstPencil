@{
    ViewBag.Title = "拍卖详情";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
        body {
            text-align: center;
        }

        #titleshouw {
            margin-top: 5%;
        }

            #titleshouw > strong {
                background: #C71C60;
                color: #fff;
                line-height: 56px;
                height: 56px;
                font-size: 110px;
                font-family: Arial;
                padding: 0 10px;
                margin-right: 10px;
                border-radius: 5px;
                box-shadow: 1px 1px 3px rgba(0,0,0,0.2);
            }
    .progress{
        width:80%;
        margin-top:5%;
        margin-left:10%;
        height:3em;
        line-height:3em;
    }
    .progress .bar{
        font-size:2.8em;
    }
</style>
<div id="titleshouw">
    <strong>拍卖即将开始</strong>
</div>

<div class="progress progress-striped active">
    <div class="bar" style="width: 80%;">80000/100000</div>
</div>
<div class="box3">
    <div></div>
    <div class="border3">
        @{
            if (@ViewBag.AuctionOrderList != null)
            {
                foreach (FirstPencilService.Models.AuctionOrder m in @ViewBag.AuctionOrderList as List<FirstPencilService.Models.AuctionOrder>)
                {
                    <div class="alert">
                        <blockquote>
                            <p class="text">
                                <span>
                                    @m.User.Salesman.Name
                                </span>
                                <span>在</span><span class="creatrDate">@m.CreatrDate</span><span>&nbsp;</span>成功购买<span> @m.Count</span> 件
                            </p>
                        </blockquote>
                    </div>
                }
            }
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(".creatrDate").html(" "+$(".creatrDate").html().substring(0, 15));
    })
</script>



