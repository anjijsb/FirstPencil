            background-color: white;
        }

            #masonry .thumbnail .imgs {
                padding: 10px;
            }

                #masonry .thumbnail .imgs img {
                    margin-bottom: 5px;
                }

            #masonry .thumbnail .caption {
                background-color: #fff;
                padding-top: 0;
                font-size: 13px;
            }

                #masonry .thumbnail .caption .title {
                    font-size: 13px;
                    font-weight: bold;
                    margin: 5px 0;
                    text-align: center;
                }

                #masonry .thumbnail .caption .author {
                    font-size: 11px;
                    text-align: center;
                }
