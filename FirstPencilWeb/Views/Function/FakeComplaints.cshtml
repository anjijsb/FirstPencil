@{
    ViewBag.Title = "打假投诉";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    div {
        margin-top: 2em;
    }

    span {
        font-size: 1.3em;
        color: #458994;
        font-weight: 900;
        padding-left: 0.5em;
    }

    .bj {
        width: 100%;
        height: 85%;
        z-index: -100;
        position: fixed;
        left: 0;
        top: 5%;
    }

    #bt {
        margin-top: 1em;
    }
</style>
<img src="~/Images/bj/pmbj.png" class="bj" />
<div>
    <span>请您填写以下信息：</span>
    <form id="form1" style="text-align:center;margin-top:5%;" method="post" action="/Users/UpdateAddress">
        <input type="hidden" value="@ViewBag.token" id="token" />
        <input type="text" name="Title" style="width:92%" class="form-control" placeholder="投诉主题" />
        <input type="text" name="Addres" style="width:92%;" class="form-control" placeholder="发生投诉问题的事发地" />
        <input type="text" name="ShopName" style="width:92%;" class="form-control" placeholder="购买的商品名称" />
        <textarea name="Addres" rows="3" style="width:92%;" placeholder="投诉内容"></textarea><br />
        <button class="btn btn_primary" id="chooseImage">上传图片</button><br />
        <input class="btn  btn-info" id="bt" type="button" value="提交" />
    </form>
</div>
<script src="~/Jscript/Helps/jweixin-1.0.0.js"></script>
